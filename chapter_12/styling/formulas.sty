\newcommand\iv{\boldsymbol{\hat{\textbf{\i}}}}
\newcommand\jv{\boldsymbol{\hat{\textbf{\j}}}}
\newcommand\kv{\boldsymbol{\hat{\textbf{k}}}}
\newcommand\uv[1]{\boldsymbol{\hat{\textbf{#1}}}}

\newcommand\fvec[1]{\vec{\textbf{#1}}}
\newcommand\bdot{\boldsymbol{\cdot}}
\newcommand\dotp[2]{\fvec{#1} \bdot \fvec{#2}}
\newcommand\abs[1]{\lvert #1 \rvert}
\newcommand\xp[2]{\fvec{#1} \times \fvec{#2}}

\newcommand\twomat[4]{
    \begin{vsmallmatrix}
        #1 & #2 \\
        #3 & #4
    \end{vsmallmatrix}
}

\newcommand\threemat[9]{
    \begin{vsmallmatrix}
        #1 & #2 & #3 \\
        #4 & #5 & #6 \\
        #7 & #8 & #9
    \end{vsmallmatrix}
}



